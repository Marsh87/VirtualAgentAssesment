@model VirtualAgentAssessment.Models.CloseAccountViewModel

@{
    ViewBag.Title = "Close Account";
}

<h2>Close Account</h2>

<h3>Are you sure you want to close this Account?</h3>
<div>
    <hr/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.account_number)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.account_number)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.outstanding_balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.outstanding_balance)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            @Html.HiddenFor(m => m.code)
            @Html.HiddenFor(m => m.person_code)
            @Html.HiddenFor(m => m.outstanding_balance)
            @Html.HiddenFor(m => m.account_number)
            <input type="submit" value="Close Account" class="btn btn-default"/> |
            @Html.ActionLink("Back to Person", "Edit","Person",new {code = Model.person_code},null)
        </div>
    }
</div>